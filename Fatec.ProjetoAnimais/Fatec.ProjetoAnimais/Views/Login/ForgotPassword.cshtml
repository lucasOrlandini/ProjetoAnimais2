@using Fatec.ProjetoAnimais.Models
@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Passowrd";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    .btn-primary {
        color: black;
        background: #fff;
        border-color: #ccc;
        font-family: inherit;
    }
    .btn:hover {
        color: #333;
        background-color: #e6e6e6;
        border-color: #adadad;
    }

</style>
<h2>Esqueceu sua senha</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
            {
                <label asp-for="Email" style="color: green;">@ViewBag.Mensagem</label>
            }
            <div class="form-group">
                <label asp-for="Email"></label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Digite seu Email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
    
    <div>

       <br /> &nbsp; &nbsp;  @Html.ActionLink("Voltar", "Autenticar", "Login")
    </div>
</div>